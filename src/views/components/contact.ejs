<section class="section" id="contact">
    <div class="columns">
        <div class="column">
            <form name="contact" method="POST" action="send" data-netlify="true">
                <div class="field">
                    <div class="control">
                        <input name="email" class="input" type="email" placeholder="Email" required>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <textarea name="message" class="textarea" placeholder="Message" required></textarea>
                    </div>
                </div>
                <div class="field is-grouped is-grouped-right">
                    <p class="control">
                        <button class="button is-primary" type="submit">
                            <span class="icon is-small">
                                <i class="material-icons">send</i>
                            </span>
                            <span>Envoyer</span>
                        </button>
                    </p>
                </div>
            </form>
        </div>
        <div class="column">
        </div>
    </div>
</section>